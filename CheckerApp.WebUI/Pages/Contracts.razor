@page "/"
@page "/contracts"
@inject IContractService ContractService
@inject NavigationManager NavigationManager


@if (contracts == null)
{
    <div class="spinner"></div>
}
else
{
    <h3>Список договоров</h3>

    <table class="table table-sm table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Название</th>
                <th scope="col">Номер договора</th>
                <th scope="col">Внутренний номер</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contract in contracts)
            {
                <tr @onclick="()=> NavigateTo(contract.Id)">
                    <td scope="col">@contract.Id</td>
                    <td scope="col">@contract.Name</td>
                    <td scope="col">@contract.ContractNumber</td>
                    <td scope="col">@contract.DomesticNumber</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {

    IEnumerable<ContractDetailVm> contracts;

    protected override async Task OnInitializedAsync()
    {
        contracts = (await ContractService.GetContracts()).Contracts;
    }

    private void NavigateTo(int id)
    {
        NavigationManager.NavigateTo($"/contract/detail/{id}");
    }
}
