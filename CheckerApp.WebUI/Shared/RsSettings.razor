<h3>RsSettings</h3>

<div class="form-group">
    <InputText @bind-Value="Settings.Address">
        
    </InputText>
</div>
<div class="form-group">
    <InputSelect @bind-Value="Settings.BoudRate">
        <option value="9600">9600</option>
        <option value="19200">19200</option>
        <option value="38400">38400</option>
        <option value="57600">57600</option>
        <option value="115200">115200</option>
    </InputSelect>
</div>
<div class="form-group">
    <InputSelect @bind-Value="Settings.Parity">
        @foreach (Parity item in Enum.GetValues(typeof(Parity)))
        {
            <option value="@item">@Enum.GetName(typeof(Parity), item)</option>
        }
    </InputSelect>
</div>
<div class="form-group">
    <InputSelect @bind-Value="Settings.DataBits">
        <option value="7">7</option>
        <option value="8">8</option>
    </InputSelect>
</div>
<div class="form-group">
    <InputSelect @bind-Value="Settings.StopBit" @onchange="IsChanged">
        <option value="1">1</option>
        <option value="1.5">1.5</option>
        <option value="2">2</option>
    </InputSelect>
</div>


@code {

    public EventCallback IsChanged { get; set; }

    [Parameter]
    public RS485Settings Settings { get; set; } = new RS485Settings();
}
