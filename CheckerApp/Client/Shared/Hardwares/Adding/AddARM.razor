@using CheckerApp.Shared.Models.Commands
@using CheckerApp.Client.Shared.Modal


<div class="mb-2 row">
    <div class="col">
        <MatTextField Label="Модель операторской станции" @bind-Value="Value.ArmName" Outlined="true" Style="width: 100%;"></MatTextField>
